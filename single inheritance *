import java.util.Scanner;
public class class1{

    public static void main(String arg[])
    {
    System.out.println("This is class 1");
    }

     void test()
    {
            int num1, num2, num3;
            Scanner In = new Scanner(System.in);
            System.out.println("\nEnter First Number: ");
            num1 = In.nextInt();
            System.out.println("\nEnter Second Number: ");
            num2 = In.nextInt();
            num3 = num1 + num2;
            System.out.println("\nThis the value after adding two digits: " + num3);
        }
    }




public class class2 extends class1
{
public static void main()
{
    System.out.println("\n This is class 2");
}
void show()
{
    System.out.println("\n Hello how are doing buddy");
}
}



public class class3
{
    public static void main(String Arg[])
    {
        System.out.println("This is class 3");
        System.out.println("\nCreate an object to display the message here:");
        class2 info=new class2();
        info.test();
        info.show();

    }
}
